<!DOCTYPE html>

<h1>Hair Salon!</h1>

<h2>Add a stylist's name:</h2>



<form action="/stylists" method="post">
  <label for="stylist_name">Stylist</label>
  <input id="stylist_name" name="stylist_name" type="text">
  <button type="submit" class="btn btn-success">Add Stylist</button>
</form>

<form action="/clients" method="post">
  <div class="form-group">
  <label for="stylist_id">Select a stylist</label>
  <select id="stylist_id" name="stylist_id" type="text">
    #foreach($stylist in $stylists)
      <option value="$stylist.getId()">$stylist.getStylistName()</option>
      #end
    </select>
  </div>


</form>

    #if($stylists)
    <p>Click on a stylist to manage their client list:</p>
    <ul>
      #foreach($stylist in $stylists)
    <li><a href="/stylists/$stylist.getId()">$stylist.getStylistName()</a></li>
    #end
  </ul>
    #else
    <p>You have not added a stylist yet!</p>
    #end
